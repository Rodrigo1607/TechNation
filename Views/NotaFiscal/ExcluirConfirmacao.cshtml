@model NotaFiscal

@{
    ViewData["Title"] = "Excluir Nota Fiscal";
}

<h1>Excluir Nota Fiscal</h1>

<h3>Tem certeza que deseja excluir esta nota fiscal?</h3>
<div>
    <h4>Nota Fiscal</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NomePagador)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomePagador)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumeroIdentificacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumeroIdentificacao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataEmissao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataEmissao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataCobranca)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataCobranca)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataPagamento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataPagamento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ValorNota)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ValorNota)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DocumentoNotaFiscal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DocumentoNotaFiscal)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DocumentoBoletoBancario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DocumentoBoletoBancario)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>

    <form asp-action="Excluir">
        <div class="form-group">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Excluir" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>
